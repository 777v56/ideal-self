<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <% if @range == "つぶやき" %>
        <h4><u><strong>「<%= @word %>」を含むつぶやきの一覧</strong></u></h4>
        <%= render 'admin/mutters/mutter', mutters: @mutters, users: @users %>
      <% elsif @range == "コメント" %>
        <h4><u><strong>「<%= @word %>」を含むコメントの一覧</strong></u></h4>
        <%= render 'admin/comments/comment', comments: @comments %>
      <% else %>
        <h4><u><strong>「<%= @word %>」を含むユーザーの一覧</strong></u></h4>
        <%= render 'admin/users/user', users: @users %>
      <% end %>
    </div>
    <div class="col-lg-3"></div>
  </div>
  </div>
</div>