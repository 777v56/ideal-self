<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <% if @range == "つぶやき" %>
        <h4>
          <strong>
            <i class="far fa-star"></i>
            「<%= @word %>」を含むつぶやき一覧
          </strong>
        </h4>
        <%= render 'admin/mutters/mutter', mutters: @mutters, users: @users %>
      <% elsif @range == "コメント" %>
        <h4>
          <strong>
            <i class="far fa-star"></i>
            「<%= @word %>」を含むコメント一覧
          </strong>
        </h4>
        <%= render 'admin/comments/comment', comments: @comments %>
      <% else %>
        <h4>
          <strong>
            <i class="far fa-moon"></i>
            「<%= @word %>」を含むユーザー一覧
          </strong>
        </h4>
        <%= render 'admin/users/user', users: @users %>
      <% end %>
    </div>
    <div class="col-lg-3"></div>
  </div>
  </div>
</div>