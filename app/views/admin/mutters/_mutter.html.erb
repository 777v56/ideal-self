<% mutters.each do |mutter| %>
<table class='table table-bordered table-sm my-4'>
  <tr class="table-info">
    <td class="pl-3">
      <%= link_to user_path(mutter.user.id) do %>
      <%= image_tag mutter.user.get_profile_image, size: '30x30' %>
      <%= mutter.user.name %><% end %>
    </td>
  </tr>
  <tr>
    <td class="p-3">
      <strong><%= mutter.mutter %></strong><br>
      <p class="text-center">
      <% if mutter.mutter_image.attached? %>
        <%= image_tag mutter.mutter_image, size: '200x200' %>
      <% end %>
      </p>
      <p class="text-right"><%= mutter.created_at.strftime("%Y/%m/%d %H:%M") %></p>
    </td>
  </tr>
  <tr class="table-secondary text-right">
    <td>
      <%= link_to admin_mutter_path(mutter.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-outline-secondary" do %>
      <i class="fas fa-trash-alt"></i><% end %>
    </td>
  </tr>
</table>
<% end %>