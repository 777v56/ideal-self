<canvas id="myChart"></canvas>
<script>
    const type = "line";
    let data = {
        labels: <%= records.map{ |r| r.input_date.strftime("%d日") }.to_s.html_safe %>,
        // html_safeで""→&quotに変換されるのを防ぐ
        datasets: [{
            label: "体重",
            data: <%= records.map(&:weight).map(&:to_i) %>,
            borderColor: 'tomato',
            backgroundColor: 'lightsalmon'
        }, {
            label: '体脂肪率',
            data: <%= records.map(&:fat).map(&:to_i) %>,
            borderColor: 'gold',
            backgroundColor: 'khaki'
        }, {
            label: "筋肉量",
            data: <%= records.map(&:muscle).map(&:to_i) %>,
            borderColor: 'springgreen',
            backgroundColor: 'palegreen'
        }, {
            label: "ウエスト",
            data: <%= records.map(&:waist).map(&:to_i) %>,
            borderColor: 'cornflowerblue',
            backgroundColor: 'lightskyblue'
        }]
    }
    let options;
    const ctx = document.getElementById("myChart").getContext("2d");

    const myChart = new Chart(ctx, {
        type: type,
        data: data,
        options: options
    });
</script>