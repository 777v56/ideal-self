<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'user/users/left', user: @user %>
    </div>
    <div class="col-lg-6">
      <h4><u><strong><%= @user.name %>がフォローしているユーザー</strong></u></h4>
      <% if @users.count > 0 %>
        <%= render 'user/users/list', users: @users %>
      <% else %>
        <p>誰もフォローしていません。</p>
      <% end %>
      <div class="mx-auto" style="width: 200px;"><%= paginate @users %></div>
    </div>
    <div class="col-lg-1"></div>
    <div class="col-lg-2">
      <%= render 'user/users/right', user: @user %>
    </div>
  </div>
  </div>
</div>