<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render "user/users/left", user: @user %>
    </div>
    <div class="col-lg-6">
      <h4>
        <strong>
          <i class="far fa-moon"></i>
          <%= @user.name %>をフォローしているユーザー
        </strong>
      </h4>
      <% if @users.count > 0 %>
        <%= render "user/users/list", users: @users %>
      <% else %>
        <% if @user == current_user %>
        <% else %>
          <%= link_to user_relationships_path(@user.id), method: :post, title:"フォロー追加" do %>
          最初のフォロワーになる<i class="fas fa-user-plus"></i><% end %>
        <% end %>
      <% end %>
      <%= paginate @users, theme: "twitter-bootstrap-4" %>
    </div>
    <div class="col-lg-3">
      <%= render "user/users/right", user: @user %>
    </div>
  </div>
</div>