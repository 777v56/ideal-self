<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'user/users/left', user: @user %>
    </div>
    <div class="col-lg-5">
      <table class='table table-bordered table-sm my-4'>
        <tr class="table-info">
          <td class="pl-3">
            <%= link_to user_path(@mutter.user.id) do %>
            <%= image_tag @mutter.user.get_profile_image, size: '30x30' %>
            <%= @mutter.user.name %><% end %>
          </td>
        </tr>
        <tr>
          <td class="p-3"><%= @mutter.mutter %></td>
        </tr>
        <tr class="table-secondary text-right">
          <td class="pr-3" id="favorite-btn-<%= @mutter.id %>">
            <%= render 'user/favorites/favorite-btn', mutter: @mutter %>
          </td>
        </tr>
      </table>
      <div id="comments-area">
        <div class="text-right actions">
          <%= form_with model: [@mutter,@comment], local: false do |f| %>
          <%= f.text_area :comment, class: 'form-control', placeholder: "コメントの内容"%>
          <%= f.submit "送信", class: "btn btn-sm btn-success" %>
        <% end %>
        </div>
        <%= render "user/comments/comment",mutter: @mutter,comment: @comment %></div>
    </div>
    <div class="col-lg-1"></div>
    <div class="col-lg-3">
      <%= render 'user/users/right', user: @user %>
    </div>
  </div>
  </div>
</div>