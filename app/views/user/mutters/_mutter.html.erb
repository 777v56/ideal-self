<% mutters.each do |mutter| %>

  <!--投稿主情報-->
  <div style="background-color: #fff0f5;" class="border-top border-left border-right rounded-top mt-4 p-2">
    <%= link_to user_path(mutter.user.id) do %>
      <%= image_tag mutter.user.get_profile_image, class: "rounded-circle mr-2", size: '35x35' %>
      <%= mutter.user.name %>
    <% end %>
    <% if mutter.user == current_user %>
    <% else %>
      <% if current_user.following?(mutter.user) %>
      <% else %>
        <%= link_to user_relationships_path(mutter.user.id), method: :post, title:"フォロー追加" do %>
          <i class="fas fa-user-plus"></i>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <!--投稿内容-->
  <div class="border-left border-right p-3">
    <strong><%= mutter.mutter %></strong><br>
    <p class="text-center">
      <% if mutter.mutter_image.attached? %>
        <%= image_tag mutter.mutter_image, class: "rounded", height: '200' %>
      <% end %>
    </p>
    <p class="text-right">
      <%= mutter.created_at.strftime("%Y/%m/%d %H:%M") %>
    </p>
  </div>

  <!--いいね・コメント・編集・削除-->
  <div style="display: flex; background-color: #f5f5f5;" class="border-bottom border-left border-right rounded-bottom mb-4 pt-1 pl-3">
    <p class="pr-3" id="favorite-btn-<%= mutter.id %>">
      <%= render 'user/favorites/favorite-btn', mutter: mutter %>
    </p>
    <p class="pr-3">
      <%= link_to mutter_path(mutter.id), title:"コメントする" do %>
        <i class="fas fa-comment-alt"></i>
        <%= mutter.comments.count %>
      <% end %>
    </p>
    <% if mutter.user == current_user %>
      <p class="pr-3">
        <%= link_to edit_mutter_path(mutter), title:"編集する" do %>
          <i class="fas fa-pen"></i>
        <% end %>
      </p>
      <%= link_to mutter, method: :delete, data: { confirm: '本当に削除しますか？' }, title:"削除する" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    <% end %>
  </div>
<% end %>