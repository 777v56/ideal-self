<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'user/users/left', user: @user %>
    </div>
    <div class="col-lg-6 px-5">
      <% if @user.name != "guestuser" %>
        <h4><u><strong><%= @user.name %>のつぶやき</strong></u></h4>
      <% end %>
      <%= render 'user/mutters/mutter', mutters: @mutters, user: @user %>
        <%= paginate @mutters, theme: 'twitter-bootstrap-4' %>
    </div>
    <div class="col-lg-3">
      <%= render 'user/users/right' %>
    </div>
  </div>
</div>