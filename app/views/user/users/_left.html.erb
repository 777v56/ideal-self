<table class="table table-borderless table-sm">
  <tr>
    <td class="text-center">
      <%= image_tag user.get_profile_image, size:'150x150' %><br>
      <strong>
        <%= user.name %>
        <% if user.name != "guestuser" %>
          <% if user == current_user %>
            <%= link_to edit_user_path(current_user.id), title:"プロフィール編集" do %>
	          <i class="fas fa-user-cog"></i><% end %>
	        <% else %>
	          <% if current_user.following?(user) %>
              <%= link_to user_relationships_path(user.id), method: :delete, title:"フォロー解除" do %>
              <i class="fas fa-user-minus"></i><% end %>
            <% else %>
              <%= link_to user_relationships_path(user.id), method: :post, title:"フォロー追加" do %>
              <i class="fas fa-user-plus"></i><% end %>
            <% end %>
        <% end %>
      </strong>
    </td>
  </tr>
  <tr>
    <td class="small text-center">
      <i class="fas fa-birthday-cake"></i><%= user.birthday.strftime('%Y/%m/%d') %>
      　性別:<%= user.gender_i18n %>
    　　身長:<%= user.height %>cm
    </td>
  </tr>
  <tr>
    <td class="small text-center">
      フォロー
      <%= link_to user_followings_path(user.id) do %>
      <%= user.followings.count %><% end %>
      フォロワー
      <%= link_to user_followers_path(user.id) do %>
      <%= user.followers.count %><% end %>
    </td>
  </tr>
  <tr>
    <td class="text-center">
      <%= link_to "記録を見る", record_path(user.id), class: "btn-sm btn-outline-secondary"  %>
      <%= link_to "いいねした呟き", favorite_path(user.id), class: "btn-sm btn-outline-secondary" %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <%= user.introduction %>
    </td>
  </tr>
</table>