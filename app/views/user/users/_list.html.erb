<% users.each do |user| %>
  <div style="background-color: #e0ffff;" class="border-top border-left border-right rounded-top mt-4 p-2">
    <%= link_to user_path(user.id), class:"link" do %>
      <%= image_tag user.get_profile_image, class: "rounded-circle mr-2", size: "35x35" %>
      <%= user.name %>
    <% end %>
    <% if current_user.following?(user) %>
      <button type="button" class="btn btn-sm btn-outline-secondary rounded-pill ml-2" disabled>フォロー中</button>
    <% end %>
  </div>
  <div class="border-bottom border-left border-right rounded-bottom p-3 mb-4">
    <%= user.introduction %>
  </div>
<% end %>