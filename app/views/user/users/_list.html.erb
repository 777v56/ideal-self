<table class='table table-hover'>
  <thead>
    <tr>
      <th></th>
      <th>ユーザー名</th>
      <th>自己紹介</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
      <td><%= link_to user_path(user.id) do %><%= user.name %><% end %></td>
      <td><%= user.introduction %></td>
    </tr>
    <% end %>
  </tbody>
</table>