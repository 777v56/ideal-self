<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <div class="mb-4">
        <h3><u><%= link_to "新規登録", root_path %></u></h3>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", placeholder: "ユーザー名" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.text_field :birthday, class: "form-control", autofocus: true, autocomplete: "birthday", placeholder: "生年月日" %>
      </div>
      <div class="form-group">
        性別　ラジオボタン付ける
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "パスワード（6文字以上）" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "パスワード（確認）" %>
      </div>
      <div class="text-right actions">
        <%= f.submit '登録する', class: 'btn-sm btn-primary' %>
      </div>
      <% end %>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>