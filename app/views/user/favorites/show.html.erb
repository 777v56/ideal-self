<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render "user/users/left", user: @user %>
    </div>
    <div class="col-lg-6">
      <h4>
        <strong>
          <i class="far fa-moon"></i>
          <%= @user.name %>がいいねしたつぶやき
        </strong>
      </h4>
      <%= render "user/mutters/mutter", mutters: @mutters, user: @user %>
      <%= paginate @mutters, theme: "twitter-bootstrap-4" %>
    </div>
    <div class="col-lg-3">
      <%= render "user/users/right", user: @user %>
    </div>
  </div>
</div>