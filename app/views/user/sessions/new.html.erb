<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <div class="mb-4">
        <h4>
          <strong>
            <i class="far fa-moon"></i>
            <%= link_to "ログイン", root_path, class:"link" %>
          </strong>
        </h4>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :パスワード %>
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>
      <div class="text-right actions">
        <%= f.submit "ログインする", class: "btn btn-sm btn-primary" %>
      </div>
      <% end %>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>