<div class="container">
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <div class="mb-4">
        <h4><u><strong><%= link_to "ログイン", root_path, class:"link" %></strong></u></h4>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        メールアドレス
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
        パスワード
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>
      <div class="text-right actions">
        <%= f.submit 'ログインする', class: 'btn btn-sm btn-primary' %>
      </div>
      <% end %>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>